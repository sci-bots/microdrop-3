{
  "name": "@microdrop/microdrop",
  "version": "1.1.32",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "./node_modules/.bin/electron-builder"
  },
  "author": "Sci-Bots",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "electron": "^1.7.12",
    "electron-builder": "^19.56.0"
  },
  "dependencies": {
    "@microdrop/models": "^1.1.32",
    "@microdrop/ui": "^1.1.32",
    "@micropede/broker": "0.0.20",
    "@micropede/client": "0.0.19",
    "ascoltatori": "git+https://github.com/Lucaszw/ascoltatori.git",
    "express": "^4.16.2",
    "lodash": "^4.17.4",
    "mosca": "git+https://github.com/Lucaszw/mosca.git"
  },
  "build": {
    "appId": "com.sci-bots.microdrop",
    "productName": "microdrop",
    "copyright": "Copyright Â© 2018 Sci-Bots",
    "nsis": {
      "oneClick": true,
      "perMachine": true
    },
    "fileAssociations": {
      "ext": "microdrop"
    },
    "files": [
      "public/**/*",
      "utils/**/*",
      "index.js",
      "node_modules/@microdrop/**/*",
      "node_modules/@micropede/**/*"
    ],
    "asar": false
  },
  "environment": {
    "HTTP_PORT": 3000,
    "MQTT_TCP_PORT": 1884,
    "MQTT_WS_PORT": 8083,
    "host": "localhost",
    "defaultEnabled": [
      "device-ui-plugin",
      "state-saver"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false
}
